@model Tap.Dotnet.Web.Application.Models.WeatherInfoViewModel

<p>@Html.ValidationMessage("Index")</p>

<div class="text-center">
    <h1 class="display-4">Weather Watch</h1>
    @using (Html.BeginForm("Search", "Home", FormMethod.Post))
    {
        @Html.TextBoxFor(model => model.ZipCode)
        @Html.ValidationMessageFor(model => model.ZipCode)
        <button type="submit">Get Forecast</button>
    }
    <br />
    <br />
    <h3>@Model.CityName, @Model.CountryCode</h3>
    <br />
    <br />
    <div class="container">
        <div class="text-center border-top">
            <h6 class="display-6">5-day Forecast</h6>
            <table style="width:100%;">
                <tr>
                    <td>@Model.Forecast[0].Date.DayOfWeek</td>
                    <td>@Model.Forecast[1].Date.DayOfWeek</td>
                    <td>@Model.Forecast[2].Date.DayOfWeek</td>
                    <td>@Model.Forecast[3].Date.DayOfWeek</td>
                    <td>@Model.Forecast[4].Date.DayOfWeek</td>
                </tr>
                <tr>
                    <td>@Model.Forecast[0].TemperatureF℉</td>
                    <td>@Model.Forecast[1].TemperatureF℉</td>
                    <td>@Model.Forecast[2].TemperatureF℉</td>
                    <td>@Model.Forecast[3].TemperatureF℉</td>
                    <td>@Model.Forecast[4].TemperatureF℉</td>
                </tr>
                <tr>
                    <td>@Model.Forecast[0].Description</td>
                    <td>@Model.Forecast[1].Description</td>
                    <td>@Model.Forecast[2].Description</td>
                    <td>@Model.Forecast[3].Description</td>
                    <td>@Model.Forecast[4].Description</td>
                </tr>
            </table>
        </div>
    </div>
</div>
